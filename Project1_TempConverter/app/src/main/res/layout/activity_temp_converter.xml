<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TempConverterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/degreesLabel"
        android:id="@+id/degreesLabel"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fahrenheitLabel"
        android:id="@+id/fahrenheitLabel"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@+id/degreesLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/celciusLabel"
        android:id="@+id/celciusLabel"
        android:layout_below="@+id/fahrenheitLabel"
        android:layout_alignLeft="@+id/fahrenheitLabel"
        android:layout_alignStart="@+id/fahrenheitLabel"
        android:layout_marginTop="49dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/celciusResultLabel"
        android:id="@+id/celciusResultLabel"
        android:layout_alignTop="@+id/celciusLabel"
        android:layout_alignLeft="@+id/degreesLabel"
        android:layout_alignStart="@+id/degreesLabel"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/farenheitEditText"
        android:layout_alignBottom="@+id/fahrenheitLabel"
        android:layout_alignLeft="@+id/degreesLabel"
        android:layout_alignStart="@+id/degreesLabel"
        android:layout_gravity="center" />

</RelativeLayout>
